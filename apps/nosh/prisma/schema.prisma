datasource postgres {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  email     String?
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  name      String?
  password  String
  photo     String?
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model OpenTime {
  hour         Int
  id           String    @id @default(cuid())
  minute       Int
  timeLapses   TimeLapse @relation(fields: [timeLapsesId], references: [id])
  timeLapsesId String    @unique
}

model CloseTime {
  hour         Int
  id           String    @id @default(cuid())
  minute       Int
  timeLapses   TimeLapse @relation(fields: [timeLapsesId], references: [id])
  timeLapsesId String    @unique
}

model TimeLapse {
  close CloseTime?
  id    String     @id @default(cuid())
  open  OpenTime?
}
