datasource postgres {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  email     String?
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  name      String?
  password  String
  photo     String?
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Order {
  id          String       @id @default(uuid())
  orderEvents OrderEvent[]
}

model OrderEvent {
  createdAt   DateTime                   @default(now())
  eventSource EnumOrderEventEventSource?
  id          String                     @id @default(cuid())
  order       Order?                     @relation(fields: [orderId], references: [id])
  orderId     String?
  status      Int
  updatedAt   DateTime                   @updatedAt
}

enum EnumOrderEventEventSource {
  Nosh
  Chowly
  Checkmate
  Shipday
}
