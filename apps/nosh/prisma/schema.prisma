datasource postgres {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  email     String?
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  name      String?
  password  String
  photo     String?
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Location {
  addresses  Address[]
  businesses Business[]
  id         String     @id @default(cuid())
  lat        Float
  lng        Float
}

model Address {
  createdAt  DateTime @default(now())
  id         String   @id @default(cuid())
  location   Location @relation(fields: [locationId], references: [id])
  locationId String
  street     String?
  updatedAt  DateTime @updatedAt
}

model Business {
  createdAt  DateTime @default(now())
  id         String   @id @default(cuid())
  location   Location @relation(fields: [locationId], references: [id])
  locationId String
  name       String
  updatedAt  DateTime @updatedAt
}
