datasource postgres {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  email     String?
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  name      String?
  password  String
  photo     String?
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model TimeLapseInterval {
  hour             Int
  id               String    @id @default(cuid())
  minute           Int
  timeLapseClose   TimeLapse @relation(name: "open", fields: [timeLapseCloseId], references: [id])
  timeLapseCloseId String    @unique
  timeLapsesOpen   TimeLapse @relation(name: "close", fields: [timeLapsesOpenId], references: [id])
  timeLapsesOpenId String    @unique
}

model TimeLapse {
  close      TimeLapseInterval? @relation(name: "close")
  id         String             @id @default(cuid())
  open       TimeLapseInterval? @relation(name: "open")
  schedule   Schedule?          @relation(fields: [scheduleId], references: [id])
  scheduleId String?
}

model Schedule {
  createdAt DateTime    @default(now())
  id        String      @id @default(cuid())
  lapses    TimeLapse[]
  updatedAt DateTime    @updatedAt
}
