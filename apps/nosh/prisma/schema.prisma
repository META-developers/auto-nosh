datasource postgres {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  email     String?
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  name      String?
  password  String
  photo     String?
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model OpenTime {
  hour        Int
  id          String    @id @default(cuid())
  minute      Int
  timeLapse   TimeLapse @relation(fields: [timeLapseId], references: [id])
  timeLapseId String    @unique
}

model CloseTime {
  hour        Int
  id          String    @id @default(cuid())
  minute      Int
  timeLapse   TimeLapse @relation(fields: [timeLapseId], references: [id])
  timeLapseId String    @unique
}

model TimeLapse {
  close      CloseTime?
  id         String     @id @default(cuid())
  open       OpenTime?
  schedule   Schedule?  @relation(fields: [scheduleId], references: [id])
  scheduleId String?
}

model Schedule {
  createdAt DateTime    @default(now())
  id        String      @id @default(cuid())
  lapses    TimeLapse[]
  updatedAt DateTime    @updatedAt
}
